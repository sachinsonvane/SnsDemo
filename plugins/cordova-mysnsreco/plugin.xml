<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-mysnsreco" version="0.0.1" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
        <name>mysnsreco</name>
        <js-module name="mysnsreco" src="www/mysnsreco.js">
            <clobbers target="SNS" />
        </js-module>
        <platform name="android">
            <config-file parent="/*" target="res/xml/config.xml">
                <feature name="mysnsreco">
                    <param name="android-package" value="com.cordova.mysnsreco.SNS" />
                    <param name="onload" value="true" />
                </feature>
            </config-file>
            <config-file parent="/*" target="AndroidManifest.xml" />
            <source-file src="src/android/SNS.java" target-dir="src/com/cordova/mysnsreco/" />
        </platform>

	<platform name="ios">
            <config-file parent="/*" target="config.xml">
                <feature name="mysnsreco">
                    <param name="ios-package" value="mysnsreco" />
                </feature>
            </config-file>
            <source-file src="src/ios/mysnsreco.m" />
            <config-file target="*-Info.plist" parent="NSMicrophoneUsageDescription">
                <string>Request to use Microphone</string>
            </config-file>

            <config-file target="*-Info.plist" parent="NSSpeechRecognitionUsageDescription">
                <string>Request to use Speech Recognition</string>
            </config-file>
            <framework src="Speech.framework" />
        </platform>
</plugin>